// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id             Int      @id @default(autoincrement())
  username       String   @unique
  passwordHash   String
  registeredDate DateTime @default(now())

  adminedChannels    Channel[] @relation("channelAdmin")
  authoredMessages   Message[]
  subscribedChannels Channel[] @relation("channelMember")
}

model Channel {
  id          Int      @id @default(autoincrement())
  name        String
  topic       String?
  adminId     Int
  createdDate DateTime @default(now())

  admin    User      @relation("channelAdmin", fields: [adminId], references: [id])
  members  User[]    @relation("channelMember")
  messages Message[]
}

model Message {
  id        Int      @id @default(autoincrement())
  type      String
  content   String
  authorId  Int
  channelId Int
  sentDate  DateTime @default(now())

  author  User    @relation(fields: [authorId], references: [id])
  channel Channel @relation(fields: [channelId], references: [id])
}
